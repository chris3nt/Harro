<Window x:Class="Harro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="283*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="63.2,87,0,0" TextWrapping="Wrap" Text="Please Enter Your Name" VerticalAlignment="Top" FontSize="20" Grid.ColumnSpan="3" Grid.Column="1"/>
        <TextBox x:Name="userName" HorizontalAlignment="Left" Height="23" Margin="63.2,118,0,0" TextWrapping="Wrap" Text="userName" VerticalAlignment="Top" Width="212" Grid.ColumnSpan="3" Grid.Column="1"/>
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="113.8,120,0,0" VerticalAlignment="Top" Width="75" Grid.Column="3" Click="okClick"/>

    </Grid>
</Window>
